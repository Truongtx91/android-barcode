<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xtruong.scanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.xtruong.scanner.ScannerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.xtruong.scanner.ui.login.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--<activity-->
            <!--android:name="com.xtruong.scanner.ui.barcode.BarcodeActivity"-->
            <!--android:label="@string/app_name"-->
            <!--android:screenOrientation="portrait">-->
        <!--</activity>-->

        <activity
            android:name="com.xtruong.scanner.ui.login.RegisterActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.xtruong.scanner.ui.login.LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xtruong.scanner.ui.login.LoginActivity" />
        </activity>

        <activity
            android:name="com.xtruong.scanner.ui.login.EmailVerifyActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.xtruong.scanner.ui.login.LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xtruong.scanner.ui.login.LoginActivity" />
        </activity>
    </application>

</manifest>